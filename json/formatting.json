    {
      "name": "CampaignLogger",
      "explanation": "Set global variables for Campaign Logger formatting.",
      "entries": [
        {
          "v": "",
          "export": {
            "starttitle": "{b|",
            "endtitle": "}\r\n\r\n",
            "startheading": "\r\n\r\n{b|",
