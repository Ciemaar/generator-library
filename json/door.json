      ]
    },
    {
      "name": "modern",
      "explanation": "Doors for modern worlds.",
      "entries": [
        "{common}",
        "XXX"
      ]
    },
    {
      "name": "futuristic",
      "explanation": "Doors for science fiction worlds.",
      "entries": [
        "{modern}",
        "XXX"
      ]
    },
    {
      "**************************************************": "SPECIAL TABLES"
    },
    {
      "name": "special",
      "explanation": "Special door tables.",
      "entries": [
        "{feature}",
        "{handle}",
        "{hiding place}",
        "{material}",
        "{shape}",
        "{state}"
      ]
    },
