{
  "name": "door",
  "resultPattern": "{result}",
  "variables": {
    "footnote": ""
  },
  "explanation": "Random door table.",
  "structure": "Produces entries for different types of genres and worlds. The 'common' and 'rare' tables are generic and should be compatible with almost any world. To retain compatibility with most settings, the  non-generic tables should be called only from other tables by specifying their name directly.",
  "note": "",
  "format": "",
  "bugs": "",
  "to do": "door size",
  "see": "Dungeon_adventure",
  "date": "2018-01-09",
  "authors": "Esko Vesala.",
  "sources": "",
  "genre": "universal",
  "categories": [
    "world"
  ],
  "tables": [
    {
      "name": "result",
      "explanation": "Verbosity of the resultPattern output.",
      "entries": [
        "{summary}",
        "{detail}"
      ]
    },
    {
      "name": "summary",
      "explanation": "Brief resultPattern output.",
      "entries": [
        "{door} [{state}]"
      ]
    },
    {
      "name": "detail",
      "explanation": "Detailed resultPattern output variations.",
      "entries": [
        "{material} {door} with {handle} [{state}]",
        "{material} {door} with {handle} [{state}], appears to be {lib:condition#strong}",
        "{shape} {material} {door} with {handle} [{state}]",
        "{shape} {material} {door} with {handle} [{state}], appears to be {lib:condition#strong}",
        "{material} {door} with {feature} [{state}]",
        "{material} {door} with {feature} [{state}], appears to be {lib:condition#strong}",
        "{shape} {material} {door} with {feature} [{state}]",
        "{material} {door} with {handle} [{state}], appears to be {lib:condition#strong} "
      ]
    },
    {
      "name": "door",
      "explanation": "Door types by rarity.",
      "entries": [
        {
          "m": 10,
          "v": "{common}"
        },
        "{rare}"
      ]
    },
    {
      "name": "common",
      "explanation": "Common doors.",
      "entries": [
        "door",
        "double doors",
        "door with an inset door",
        "double doors with an inset door",
        "hidden door {hiding place}"
      ]
    },
    {
      "name": "rare",
      "explanation": "Rare doors.",
      "entries": [
        "rotating door",
        "sliding door",
        "rising door",
